<p style="color: green"><%= notice %></p>

<h1>Comments</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Show this comment", event_comment_path(params[:event_id]) %>
    </p>
  <% end %>
</div>

<%= link_to "New comment", new_comment_path %>
